{
  "include": ["src/*.ts", "src/*.tsx", "./types/*"],
  "compilerOptions": {
    "outDir": "./dist",
    "incremental": true,
    "lib": ["DOM", "DOM.Iterable", "ES2021"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "~/*": ["src/*"]
    }
  }
}
